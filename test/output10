using System; 
// USING IDENTIFIER DELIM 
 
// 
namespace StringApplication 
// NAMESPACE IDENTIFIER 
{ 
// BLOCK_BEGIN 
    class Program 
// CLASS IDENTIFIER 
    { 
// BLOCK_BEGIN 
        static void Main(string[] args) 
// STATIC VOID IDENTIFIER OPEN_PAREN STRING OPEN_BRACKET CLOSE_BRACKET IDENTIFIER CLOSE_PAREN 
        { 
// BLOCK_BEGIN 
           //from string literal and string concatenation 
// 
            string fname, lname; 
// STRING IDENTIFIER COMMA IDENTIFIER DELIM 
            fname = "Rowan"; 
// IDENTIFIER ASSIGN SCONST DELIM 
            lname = "Atkinson"; 
// IDENTIFIER ASSIGN SCONST DELIM 
 
// 
            string fullname = fname + lname; 
// STRING IDENTIFIER ASSIGN IDENTIFIER PLUS IDENTIFIER DELIM 
            Console.WriteLine("Full Name: {0}", fullname); 
// IDENTIFIER DOT IDENTIFIER OPEN_PAREN SCONST COMMA IDENTIFIER CLOSE_PAREN DELIM 
 
// 
            //by using string constructor 
// 
            char[] letters = { 'H', 'e', 'l', 'l','o' }; 
// CHAR OPEN_BRACKET CLOSE_BRACKET IDENTIFIER ASSIGN BLOCK_BEGIN CCONST COMMA CCONST COMMA CCONST COMMA CCONST COMMA CCONST BLOCK_END DELIM 
            string greetings = new string(letters); 
// STRING IDENTIFIER ASSIGN NEW STRING OPEN_PAREN IDENTIFIER CLOSE_PAREN DELIM 
            Console.WriteLine("Greetings: {0}", greetings); 
// IDENTIFIER DOT IDENTIFIER OPEN_PAREN SCONST COMMA IDENTIFIER CLOSE_PAREN DELIM 
 
// 
            //methods returning string 
// 
            string[] sarray = { "Hello", "From", "Tutorials", "Point" }; 
// STRING OPEN_BRACKET CLOSE_BRACKET IDENTIFIER ASSIGN BLOCK_BEGIN SCONST COMMA SCONST COMMA SCONST COMMA SCONST BLOCK_END DELIM 
            string message = String.Join(" ", sarray); 
// STRING IDENTIFIER ASSIGN IDENTIFIER DOT IDENTIFIER OPEN_PAREN SCONST COMMA IDENTIFIER CLOSE_PAREN DELIM 
            Console.WriteLine("Message: {0}", message); 
// IDENTIFIER DOT IDENTIFIER OPEN_PAREN SCONST COMMA IDENTIFIER CLOSE_PAREN DELIM 
 
// 
            //formatting method to convert a value 
// 
            DateTime waiting = new DateTime(2012, 10, 10, 17, 58, 1); 
// IDENTIFIER IDENTIFIER ASSIGN NEW IDENTIFIER OPEN_PAREN ICONST COMMA ICONST COMMA ICONST COMMA ICONST COMMA ICONST COMMA ICONST CLOSE_PAREN DELIM 
            string chat = String.Format("Message sent at {0:t} on {0:D}",waiting); 
// STRING IDENTIFIER ASSIGN IDENTIFIER DOT IDENTIFIER OPEN_PAREN SCONST COMMA IDENTIFIER CLOSE_PAREN DELIM 
            Console.WriteLine("Message: {0}", chat); 
// IDENTIFIER DOT IDENTIFIER OPEN_PAREN SCONST COMMA IDENTIFIER CLOSE_PAREN DELIM 
            Console.ReadKey() ; 
// IDENTIFIER DOT IDENTIFIER OPEN_PAREN CLOSE_PAREN DELIM 
        } 
// BLOCK_END 
    } 
// BLOCK_END 
} 
// BLOCK_END 
 
// 
 
// 
