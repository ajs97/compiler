using System; 
// USING IDENTIFIER DELIM 
 
// 
namespace DeclaringConstants 
// NAMESPACE IDENTIFIER 
{ 
// BLOCK_BEGIN 
    class Program 
// CLASS IDENTIFIER 
    { 
// BLOCK_BEGIN 
        static void Main(string[] args) 
// STATIC VOID IDENTIFIER OPEN_PAREN STRING OPEN_BRACKET CLOSE_BRACKET IDENTIFIER CLOSE_PAREN 
        { 
// BLOCK_BEGIN 
            const double pi = 3.14159; // constant declaration 
// CONST DOUBLE IDENTIFIER ASSIGN DCONST DELIM 
            double r; 
// DOUBLE IDENTIFIER DELIM 
            Console.WriteLine("Enter Radius: "); 
// IDENTIFIER DOT IDENTIFIER OPEN_PAREN SCONST CLOSE_PAREN DELIM 
            r = Convert.ToDouble(Console.ReadLine()); 
// IDENTIFIER ASSIGN IDENTIFIER DOT IDENTIFIER OPEN_PAREN IDENTIFIER DOT IDENTIFIER OPEN_PAREN CLOSE_PAREN CLOSE_PAREN DELIM 
            double areaCircle = pi * r * r; 
// DOUBLE IDENTIFIER ASSIGN IDENTIFIER TIMES IDENTIFIER TIMES IDENTIFIER DELIM 
            Console.WriteLine("Radius: {0}, Area: {1}", r, areaCircle); 
// IDENTIFIER DOT IDENTIFIER OPEN_PAREN SCONST COMMA IDENTIFIER COMMA IDENTIFIER CLOSE_PAREN DELIM 
            Console.ReadLine(); 
// IDENTIFIER DOT IDENTIFIER OPEN_PAREN CLOSE_PAREN DELIM 
        } 
// BLOCK_END 
    } 
// BLOCK_END 
} 
// BLOCK_END 
